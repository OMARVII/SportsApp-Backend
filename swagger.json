{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Sports App API",
        "description": "this is a Restful API provided for the Sports App"
    },
    "tags": [
        {
            "name": "Account",
            "description": "API for Account Managment in the system"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/Client/Login": {
            "post": {
                "tags": [
                    "Client"
                ],
                "summary": "Gets A Token for client",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Account"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Login Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Token"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Incorrect Email or Password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Client/Register": {
            "post": {
                "tags": [
                    "Client"
                ],
                "summary": "Registers Client to the database",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ClientRegistration"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registered Successfully",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Registered Successfully"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Email Already Exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid User Role",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "number",
                    "example": 500
                },
                "message": {
                    "type": "string",
                    "example": "Something Went Wrong"
                }
            }
        },
        "Token": {
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "id": {
            "properties": {
                "_id": {
                    "type": "string"
                }
            }
        },
        "UnAuthorized": {
            "type": "string",
            "example": "Unauthorized Account"
        },
        "FullAccount": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "isApproved": {
                    "type": "boolean"
                },
                "_id": {
                    "type": "string"
                },
                "gender": {
                    "type": "string"
                }
            }
        },
        "Account": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "ClientRegistration": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}