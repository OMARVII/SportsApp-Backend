{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Sports App API",
        "description": "this is a Restful API provided for the Sports App"
    },
    "tags": [
        {
            "name": "Account",
            "description": "API for Account Managment in the system"
        },
        {
            "name":"Class",
            "description":"Class Controller"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "consumes": [
        "application/json",
        "multipart/form-data"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/Account/ValidateToken": {
            "get": {
                "tags": [
                    "Account"
                ],
                "summary": "Validates Token in authorization header",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "payload": {
                                            "type": "object",
                                            "properties": {
                                                "result": {
                                                    "type": "boolean",
                                                    "example": true
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Account/Login": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "Gets A Token for client",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Account"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Login Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Token"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Incorrect Email or Password",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Account/Register": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "Registers Client to the database",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ClientRegistration"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registered Successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Token"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Email Already Exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid User Role",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Class":{
            "post": {
                "tags": [
                    "Class"
                ],
                "summary": "Creates New Class",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/definitions/AddClass"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Created Class Successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "properties":{
                                        "message": {
                                            "type": "string",
                                            "example": "Added Class Successfully"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Class/{id}":{
            "get": {
                "tags": [
                    "Class"
                ],
                "summary": "gets Class with passed id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required":true,
                        "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Fetched Class Successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "properties":{
                                        "payload": {
                                            "$ref": "#/definitions/Class"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Class/Like/{id}":{
            "put": {
                "tags": [
                    "Class"
                ],
                "summary": "Like Or Dislike Class with passed id",
                "description":"Set The status value in request body to true to like and false to dislike the class",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required":true,
                        "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "status":{
                                        "type":"boolean"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "properties":{
                                            "message": {"type":"string"}
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "number",
                    "example": 500
                },
                "message": {
                    "type": "string",
                    "example": "Something Went Wrong"
                }
            }
        },
        "AddClass":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "level":{
                    "type":"string"
                },
                "place":{   
                    "type":"string"
                },
                "type":{
                    "type":"string"
                },
                "classImage":{
                    "type":"string",
                    "format":"binary"
                }
            }
        },
        "Token": {
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "id": {
            "properties": {
                "_id": {
                    "type": "string"
                }
            }
        },
        "UnAuthorized": {
            "type": "string",
            "example": "Unauthorized Account"
        },
        "Class": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "level": {
                    "type": "string"
                },
                "place": {
                    "type": "string"
                },
                "type": {
                    "type": "boolean"
                },
                "likes": {
                    "type": "object",
                    "properties":{
                        "numberOfLikes":{
                            "type":"number"
                        },
                        "users":{
                            "type":"array",
                            "items":{
                                "type":"string"
                            }
                        }
                    }
                },
                "imageLocation": {
                    "type": "string"
                }
            }
        },
        "Account": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "ClientRegistration": {
            "type": "object",
            "properties": {
                "fullName": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}